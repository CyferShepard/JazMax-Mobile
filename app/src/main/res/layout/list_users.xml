<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_single_user1"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="2dp"
        android:text="Username"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_single_user"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_single_user1"
        android:layout_centerVertical="true"
        android:text="Username"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/DefaultImagePro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="1dp"
        android:background="@drawable/my_border_pro"
        android:backgroundTintMode="screen"
        android:padding="19dp"
        app:srcCompat="@drawable/ic_baseline_supervisor_account_24px" />

</RelativeLayout>